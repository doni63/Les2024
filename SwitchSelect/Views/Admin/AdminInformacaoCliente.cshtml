@model SwitchSelect.Models.Cliente

@{

    ViewData["Title"] = "Informações do cliente";
}

<h1>Informações do cliente</h1>

<div>
    <h4>Dados pessoais</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genero):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genero)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataDeNascimento):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataDeNascimento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cpf):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cpf)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RG):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RG)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Telefones):
        </dt>

        @foreach (var telefone in Model.Telefones)
        {
            <dd class="col-sm-10">
                @telefone.NumeroTelefone
            </dd>
        }
        <hr />
        <h4>Dados de endereco</h4>
        <hr />
        @foreach (var endereco in Model.Enderecos)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Enderecos.FirstOrDefault().Logradouro):
            </dt>
            <dd class="col-sm-10">
                @endereco.Logradouro
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Enderecos.FirstOrDefault().Numero):
            </dt>
            <dd class="col-sm-10">
                @endereco.Numero
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Enderecos.FirstOrDefault().CEP):
            </dt>
            <dd class="col-sm-10">
                @endereco.CEP
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Enderecos.FirstOrDefault().Bairro):
            </dt>
            <dd class="col-sm-10">
                @endereco.Bairro.Descricao
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Enderecos.FirstOrDefault().Bairro.Cidade):
            </dt>
            <dd class="col-sm-10">
                @endereco.Bairro.Cidade.Descricao
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Enderecos.FirstOrDefault().Bairro.Cidade.Estado):
            </dt>
            <dd class="col-sm-10">
                @endereco.Bairro.Cidade.Estado.Descricao
            </dd>
        }
        <hr />
        <h4>Dados de pagamento</h4>
        <hr />
        @foreach (var cartao in Model.Cartoes)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cartoes.FirstOrDefault().TipoCartao):
            </dt>
            <dd class="col-sm-10">
                @cartao.TipoCartao
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cartoes.FirstOrDefault().TitularDoCartao):
            </dt>
            <dd class="col-sm-10">
                @cartao.TitularDoCartao
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cartoes.FirstOrDefault().CartaoQuatroDigito):
            </dt>
            <dd class="col-sm-10">
                @cartao.CartaoQuatroDigito
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-controller="Cliente" asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a> |
    <a asp-controller="" asp-action="" asp-route-id="@Model.Id" class="btn btn-danger">Inativar</a> |
    <a asp-controller="Cliente" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a> |

    <a asp-action="AdminListaCliente">Voltar</a>
</div>
