@model IEnumerable<SwitchSelect.Models.Cliente>

@{
    ViewData["Title"] = "ClienteList";
}

<h1>Clientes</h1>
<!--<p>
    <a asp-action="Create">Create New</a>
</p>-->

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
           

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.Cpf)
                </td>
               
                <td>
                    <a asp-controller="Cliente" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="AdminInformacaoCliente" asp-route-id="@item.Id">Informações</a> |
                    <a asp-action="Inativar" asp-route-id="@item.Id">Inativar</a> |
                    <a asp-controller="Cliente" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

