@{
    ViewData["Title"] = "Carrinho de Compra";
}
<form>
    <div>
        <table class="table table-bordered text-center">
            <thead class="">
                <tr>
                    <td class="">Imagem</td>
                    <td>Produto</td>
                    <td>Quantidade</td>
                    <td>Preço (R$)</td>
                    <td>Total (R$)</td>
                </tr>
            </thead>
            <tbody class=" text-center">
                <tr>
                    <td><img src="~/imagens/acr_thumbnail.png" class="img-fluid"/></td>
                    <td>Another Code Revollution</td>
                    <td>1</td>
                    <td>249</td>
